{
  "name": "Discussed Elsewhere: Reddit, Hacker News, etc",
  "short_name": "Discussed Elsewhere",
  "version": "1.4.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/icon-128.png",
    "default_popup": "popup.html"
  },
  "author": "John Suarez",
  "description": "This Chrome extension checks if the current tab URL is referenced in Reddit or Hacker News.",
  "icons": {
    "16": "img/icon-128.png",
    "48": "img/icon-128.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "activeTab", "tabs"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}